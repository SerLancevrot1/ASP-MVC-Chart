@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <script>
    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
    	    theme: "light2", // "light1", "light2", "dark1", "dark2"
    	    animationEnabled: true,
    	    zoomEnabled: true,
    	    title: {
                text: "Осциллограф системы ЧПУ"
            },
            axisX: {
                valueFormatString: "HH:mm / DD-MMM-YY ",
                crosshair:
                {
			     enabled: true,
			     snapToDataPoint: true
		        }
    	    },
    	    axisY: {
    		    title: "Значения",
    		    //prefix: "$",
                includeZero: false,
                crosshair:
                {
			    enabled: true,
			    snapToDataPoint: true
	        	}
            },

            	toolTip: {
		shared: true
	},
	legend: {
		dockInsidePlotArea: true,
		verticalAlign: "top",
		horizontalAlign: "right"
	},

    	    data: [{
                type: "line",
                xValueType: "dateTime",
    		    yValueFormatString: "#,##0.##",
                xValueFormatString: "HH:mm / DD-MMM-YY ",
                name: "Temp (°C)",
		showInLegend: true,
    		    dataPoints: @Html.Raw(ViewBag.DataPoints1)
    	    },

                {
                    type: "line",
                     xValueType: "dateTime",
    		         yValueFormatString: "#,##0.##",
                    xValueFormatString: "HH:mm / DD-MMM-YY ",
                    name: "Torq (%)",
		            showInLegend: true,
    		        dataPoints: @Html.Raw(ViewBag.DataPoints2)
                },
                 {
                    type: "line",
                     xValueType: "dateTime",
    		         yValueFormatString: "#,##0.##",
                    xValueFormatString: "HH:mm / DD-MMM-YY ",
                		name: "CPU load (%)",
		            showInLegend: true,
    		        dataPoints: @Html.Raw(ViewBag.DataPoints3)
                },
            ]
        });
        chart.render();
    }

    </script>
</head>
<body>
    <div id="chartContainer" style="height: 670px; width: 100%;"></div>  @*width: 100%;*@
    <div class="col-md-4">
        <p><a><a href="/Home/Index">Назад</a></a></p>
    </div>

    @*<div id="chartContainer1" style="height: 370px; width: 100%;"></div>*@

    <script src="~/js/Canvsjs.min.js"></script>

</body>
</html>